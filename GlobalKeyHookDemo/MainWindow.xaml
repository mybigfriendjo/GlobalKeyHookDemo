<Window x:Class="GlobalKeyHookDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="MainWindow_OnClosing">
    <Grid>
        <TextBox x:Name="txtQuote" AcceptsReturn="True" AcceptsTab="True" HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center" FontFamily="French Script MT" FontSize="48" TextWrapping="Wrap">
            Press F8 for Wisdom
        </TextBox>
    </Grid>
</Window>